<%= form_with(model: publication, url: publication_path(publication)) do |form| %>
<% if publication.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

  <ul>
    <% publication.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div>
  <%= form.label :type, style: "display: block" %>
  <%= form.select :type, [["Текстовый пост", "PublicationText"], ["Видео пост", "PublicationVideo"], ["Figma пост", "PublicationFigma"]] %>
</div>

<div>
  <%= form.label :title, style: "display: block" %>
  <%= form.text_field :title %>
</div>

<div>
  <%= form.label :body, style: "display: block" %>
  <%= form.text_area :body %>
</div>

<div>
  <%= form.label :embed, style: "display: block" %>
  <%= form.text_area :embed %>
</div>

<div>
  <%= form.submit %>
</div>
<% end %>